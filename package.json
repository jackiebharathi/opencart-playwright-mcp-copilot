{
  "name": "opencart_playwright",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "test:single": "playwright test",
    "test:parallel": "playwright test --workers=3",
    "test:except-ddt": "playwright test TestCases/registration.spec.js TestCases/login.spec.js TestCases/login_logout.spec.js",
    "test:no-ddt": "playwright test --grep-invert=\"Data Driven Login Tests\"",
    "test:ci": "playwright test --reporter=html,junit",
    "test:ci-except-ddt": "playwright test TestCases/registration.spec.js TestCases/login.spec.js TestCases/login_logout.spec.js --reporter=html,junit",
    "install:browsers": "playwright install chromium",
    "install:deps": "npm ci"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "xlsx": "^0.18.5"
  }
}
